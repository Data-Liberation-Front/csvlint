<% content_for :title do %>
  <%= t(:list).titleize %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Status</th>
      <th>File URL</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @validations.each do |validation| %>
      <%= render 'validation', validation: validation %>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate @validations, :theme => 'twitter-bootstrap-3' %>
</div>

<p class="text-right alternate">
  <%= alternate_link_buttons(class: 'btn btn-primary btn-lg alternate-link', icon: 'fa fa-bars') %>
</p>
