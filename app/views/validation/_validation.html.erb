<tr>
  <td><%= image_tag validation_url(validation, format: :svg, revalidate: false) %></td>
  <td class="url"><%= validation.url.blank? ? validation.filename : validation.url %></td>
  <td class="text-right"><%= link_to "<i class='fa fa-list-alt'></i> View report".html_safe, validation_url(validation), title: "View report for #{validation.url}" %></td>
  <td class="text-right"><%= link_to "<i class='fa fa-cloud-download'></i> Download CSV".html_safe, validation.url, title: "Download CSV for #{validation.url}" %></td>
</tr>
